<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/img_0"
    tools:context=".UI.Fragment.RunFragment">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance Today"
            android:textColor="@color/dialog_white"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.robinhood.ticker.TickerView
                android:id="@+id/tv_todayDistance"
                android:layout_width="wrap_content"
                android:textColor="@color/dialog_white"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="60sp" />

            <TextView

                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="m"
                android:textColor="@color/dialog_white"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardCornerRadius="25dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:layout_marginTop="-60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/btn_run"
            android:background="@drawable/background">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/people"
                android:background="@color/lightGrayBkg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="START RUNNING"
                android:textColor="@color/dialog_white"
                android:textSize="25sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>